{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "typeRoots": [
    "@types",
    "node_modules/@types",
  ],
  "include": [
    "src/**/*.ts",
    "src/database/seed.mjs",
    "@types"
  ],
  "exclude": [
    "node_modules"
  ]
}